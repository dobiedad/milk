</div>
<div id="video-div">
  <div class="logo">
    STEELE & BROWN
  </div>
  <div id="client_portal">
    <a id="portal_form_button">Client Portal</a>
  </div>
  <div class="hex"></div>
  <div class="dots"></div>
  <div class="tee"></div>
  <%= video_tag "milk.mp4",id:"main-video", autoplay: true, :controls => false %>
</div>

<div id="pg1"></div>
<div id="pg2"></div>
<div id="pg3"></div>

<div id="modal">
  <div id="sign_in_form" class="form">
    <%= form_for(User.new, as: :user, url: session_path(:user)) do |f| %>
    <%= f.email_field :email, autofocus: true, :placeholder => "Email" %><br>
    <%= f.password_field :password, autocomplete: "off", :placeholder => "Password" %><br>
    <!-- <%= f.check_box :remember_me %> <%= f.label :remember_me %><br> -->
    <%= f.submit "Sign in", :class => 'sessions_button'  %>
    <% end %>
    <%= link_to "Sign up", new_registration_path(User)%>
  </div>
</div>

<script charset="utf-8">
$('#portal_form_button').click(function(){
  $('#modal').fadeIn();
});
</script>
